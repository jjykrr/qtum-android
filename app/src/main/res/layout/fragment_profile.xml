<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/grey_lite"
                                                 android:clickable="true"
                                                 android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_toolbar_profile"
                android:text="@string/profile"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbar_text_size"/>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_language"
            android:layout_height="56dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_language"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/tv_profile_language"
                android:layout_weight="1"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_change_pin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_changepin"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/tv_profile_change_pin"
                android:layout_weight="1"
                android:text="@string/change_pin"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_lite"/>


        <LinearLayout
            android:id="@+id/ll_wallet_back_up"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_backup"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:id="@+id/tv_profile_wallet_back_up"
                android:text="@string/wallet_back_up"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_lite"/>

        <LinearLayout
            android:id="@+id/ll_log_out"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_logout"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:id="@+id/tv_profile_log_out"
                android:text="@string/log_out"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_create_token"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_tokencreate"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:id="@+id/tv_profile_create_token"
                android:text="@string/create_token"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_lite"/>

        <LinearLayout
            android:id="@+id/ll_subscribe_tokens"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_tokensubscribe"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="@string/subscribe_tokens"
                android:id="@+id/tv_profile_subscribe_tokens"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white_with_grey_pressed"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_about"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/tv_profile_about"
                android:layout_weight="1"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rightarrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>