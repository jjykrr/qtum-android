<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:clickable="true"
    android:background="@drawable/list_item_background_selector"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:text="@string/about"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:typefaceAsset="@string/simplonMonoRegular"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/arrow"
        app:srcCompat="@drawable/ic_setting_arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginEnd="16dp"
        android:tint="@color/colorPrimary"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/about"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:typefaceAsset="@string/simplonMonoRegular"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/contract_type"
        android:layout_alignBottom="@+id/contract_type"
        android:layout_toStartOf="@+id/arrow"/>

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/contract_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/about"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:typefaceAsset="@string/simplonMonoRegular"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/title"/>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>