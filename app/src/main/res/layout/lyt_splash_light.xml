<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:background="@drawable/background_main"
    android:layout_height="match_parent">

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/txt_app_name"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="28sp"
        app:typefaceAsset="@string/proximaNovaBold"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/ic_app_logo_red"
        android:layout_above="@+id/txt_app_name"
        android:layout_centerHorizontal="true"
        android:tint="@color/white"
        android:layout_width="140dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/qtum_logo"
        android:layout_height="140dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_app_logo"
        android:layout_above="@+id/txt_app_name"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:tint="@color/white"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/qtum_logo"
        android:layout_height="140dp" />

    <ProgressBar
        android:layout_above="@+id/txt_wait"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@anim/indeterminate_loader_light_animation"
        android:alpha=".4"
        android:layout_marginBottom="32dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/txt_wait"
        android:textColor="@color/white"
        android:text="@string/please_wait_a_few_seconds"
        android:textSize="14sp"
        android:alpha=".4"
        app:typefaceAsset="@string/proximaNovaRegular"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/balance_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax">

        <com.pixelplex.qtum.ui.wave_visualizer.WaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>