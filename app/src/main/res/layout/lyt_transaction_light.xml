<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:id="@+id/ll_transaction"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ic_received_light"/>

            <com.pixelplex.qtum.utils.FontTextView
                android:id="@+id/tv_date"
                android:alpha=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="@color/bottom_nav_bar_text_color_light"
                app:typefaceAsset="@string/simplonMonoRegular" />

            <com.pixelplex.qtum.utils.FontTextView
                android:id="@+id/tv_value"
                android:layout_width="match_parent"
                android:gravity="end"
                app:typefaceAsset="@string/simplonMonoMedium"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/bottom_nav_bar_text_color_light"
                android:text="-7,450 QTUM"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <com.pixelplex.qtum.utils.FontTextView
            android:id="@+id/tv_id"
            app:typefaceAsset="@string/simplonMonoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:alpha=".7"
            android:text="1mase88dascasd12312nfsa33"
            android:textColor="@color/bottom_nav_bar_text_color_light"/>

    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:alpha=".1"
        android:background="@color/bottom_nav_bar_text_color_light"/>

</LinearLayout>