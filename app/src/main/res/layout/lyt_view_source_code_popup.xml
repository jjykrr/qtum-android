<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pixelplex.qtum.utils.FontTextView
            android:layout_width="match_parent"
            android:text="@string/Source_code"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            app:typefaceAsset="@string/simplonMonoMedium"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_marginTop="16dp"
            android:background="@drawable/source_code_frame"
            android:scrollbars="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <TextView
                android:id="@+id/source_code_tv"
                android:padding="8dp"
                android:text="contract mortal {
    /* Define variable owner of the type address*/
    address owner;\n\n
    /* this function is executed at initialization and sets the owner of the contract */
    function mortal() { owner = msg.sender; }\n\n
    /* Function to recover the funds on the contract */
    function kill() { if (msg.sender == owner) selfdestruct(owner); }
}\n\n
contract greeter is mortal {
    /* define variable greeting of the type string */
    string greeting;\n\n
    /* this runs when the contract is executed */
    function greeter(string _greeting) public {
        greeting = _greeting;
    }\n\n
    /* main function */
    function greet() constant returns (string) {
        return greeting;
    }
}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.pixelplex.qtum.utils.FontButton
                android:id="@+id/btn_cancel"
                android:padding="16dp"
                app:typeface="@string/simplonMonoRegular"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.pixelplex.qtum.utils.FontButton
                android:id="@+id/btn_copy"
                android:padding="16dp"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                app:typeface="@string/simplonMonoRegular"
                android:text="@string/copy"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>